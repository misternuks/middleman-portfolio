<div class="row my-5">
  <div class="col-12">
    <div class="container">
      <div id="projects">
        <h2> Projects</h2>
        <h4>This section is currently under construction.</h4>
        <div class="container">
          <div class="row">
            <% data.projects.each do |project| %>
              <button class="btn btn-danger" type="button" data-bs-toggle="collapse" data-bs-target="#<%= project.id %>" aria-expanded="false" aria-controls="<%= project.id %>">
                <%= project.name %>
              </button>
            </p>
            <div class="collapse" id="<%= project.id %>">
              <div class="card card-body">
                <p><%= project.description %></p>
                <%= image_tag project.image, alt: "project image" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
